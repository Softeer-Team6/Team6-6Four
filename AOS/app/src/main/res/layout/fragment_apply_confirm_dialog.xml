<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        tools:context=".ui.apply.ApplyConfirmDialogFragment">

        <TextView
            android:id="@+id/tv_apply_confirm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_confirm_title"
            android:textAlignment="center"
            android:textColor="@color/gray_700"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_apply_confirm_time_tile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/apply_confirm_time_title"
            android:textColor="@color/gray_400"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/tv_apply_confirm_time"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_apply_confirm_title" />

        <TextView
            android:id="@+id/tv_apply_confirm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="15:00 - 17:00"
            android:textColor="@color/gray_600"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_apply_confirm_time_tile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_apply_confirm_time_tile"
            app:layout_constraintTop_toTopOf="@id/tv_apply_confirm_time_tile" />

        <Button
            android:id="@+id/btn_apply_confirm_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_normal_radius_btn"
            android:paddingVertical="8dp"
            android:text="@string/apply_confirm_back"
            android:textColor="@color/gray_700"
            app:backgroundTint="@color/gray_050"
            app:layout_constraintEnd_toStartOf="@id/btn_apply_confirm_apply"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_apply_confirm_time_tile" />

        <Button
            android:id="@+id/btn_apply_confirm_apply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/background_normal_radius_btn"
            android:paddingVertical="8dp"
            android:text="@string/apply_confirm_apply"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_apply_confirm_back"
            app:layout_constraintTop_toBottomOf="@id/tv_apply_confirm_time_tile" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>